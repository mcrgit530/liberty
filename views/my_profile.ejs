<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>my profile</title>

    <!-- Include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Include Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .fixed-bottom {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
        }

        .icon {
            font-size: 1.5rem;
            margin-right: 5px;
        }

        #submit-btn:hover .name {
            display: inline;
        }

        .name {
            display: none;
        }

        #submit-btn {
            background-color: #3B82F6; /* Blue background color */
            color: white; /* White text color */
            padding: 8px 16px; /* Padding */
            border-radius: 999px; /* Rounded corners */
            transition: background-color 0.3s; /* Smooth transition */
        }

        #submit-btn:hover {
            background-color: #2563EB; /* Darker blue on hover */
        }

        #logout-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #EF4444; /* Red background color */
            color: white; /* White text color */
            padding: 8px 16px; /* Padding */
            border-radius: 999px; /* Rounded corners */
            transition: background-color 0.3s; /* Smooth transition */
        }

        #logout-btn:hover {
            background-color: #DC2626; /* Darker red on hover */
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body class="bg-gray-100 font-sans text-gray-800"> 
    <div class="container mx-auto px-4">
        <button id="submit-btn" title ="Raise a Complaint" class="text-blue-500 font-bold flex items-center">
            <i class="icon far fa-comment"></i>
            <span class="name hidden md:inline"></span>
        </button> 

        <button id="logout-btn" class="text-white font-bold">Logout</button> 

        <br><hr>

        <div id="content-area" class="mb-24"></div>

        <div class="fixed-bottom">
            <button id="dashboard-btn" class="mr-4 text-blue-500 font-bold">Dashboard</button>
            <button id="my-posts-btn" class="text-blue-500 font-bold">My Posts</button> 
        </div>
    </div>

    <script>
        $(document).ready(function() {
            const renderDashboardContent = () => {
                $.get('/dashboard', function(data) {
                    $('#content-area').html(data);
                });
            };

            const renderMyPostsContent = () => {
                $.get('/my_posts', function(data) {
                    $('#content-area').html(data);
                });
            };

            $('#dashboard-btn').click(function(event) {
                event.preventDefault(); 
                renderDashboardContent();
            });

            $('#my-posts-btn').click(function(event) {
                event.preventDefault();
                renderMyPostsContent(); 
            });

            $('#submit-btn').click(function(event) {
                event.preventDefault(); 
                window.location.href = "/submit"; 
            });

            $('#logout-btn').click(function(event) {
                event.preventDefault(); 
                window.location.href = "/logout"; 
            });

            renderDashboardContent();
        });
    </script>
</body>
</html>
